{
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-use-before-define": 0,
    "no-new": "off",
    "no-plusplus": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["Helpers", "./src/scripts/helpers"],
          ["Components", "./src/components"]
        ],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
